@model Chess.Web.Models.ValidationModels.LoginValidationModel

<form asp-action="LogIn" method="post">
    <div class="container col-6">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control" data-val="false" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" data-val="false" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input type="submit" value="LogIn" class="btn btn-secondary col-12" />
    </div>
</form>